  "main": "index.js",
  "scripts": {
    "dev:ecommerce": "pnpm --filter @ecommerce-mfe/ecommerce... dev",
    "dev:checkout": "pnpm --filter @ecommerce-mfe/checkout... dev",
    "start:ecommerce": "pnpm --filter @ecommerce-mfe/ecommerce... start",
    "start:checkout": "pnpm --filter @ecommerce-mfe/checkout... start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test:all": "jest --passWithNoTests --silent",
    "test:shared": "pnpm --filter @ecommerce-mfe/shared... test",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "build:all": "pnpm --filter '*' build",
    "dev:all": "concurrently \"pnpm dev:ecommerce\" \"pnpm dev:checkout\"",
    "test:watch": "jest --watch",
    "clean": "pnpm --filter '*' run clean || true",
    "lint:all": "pnpm --filter '*' run lint",
    "type-check": "pnpm --filter '*' run type-check || true",
    "deps:check": "pnpm audit --audit-level moderate",
    "deps:update": "pnpm update --latest"
  },
